before_all do |lane|
  if is_ci
    setup_ci
    setup_git_config
    xcversion(version: xcode_version) unless [:publish_release, :allure_launch, :allure_upload, :pod_lint, :sync_mock_server, :copyright].include?(lane)
  end
end

after_all do |lane|
  stop_sinatra if lane == :test_e2e_mock
