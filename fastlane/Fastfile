    testplan: 'StreamChatUITestPlan',
    cloned_source_packages_path: source_packages_path,
    clean: is_localhost,
    result_bundle: true,
    devices: options[:device],
    build_for_testing: options[:build_for_testing],
    skip_build: options[:skip_build],
    xcargs: buildcache_xcargs
  )
end

