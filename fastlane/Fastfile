    ui: ['Sources', 'Tests/StreamChatUITests', 'Tests/Shared', xcode_project],
    sample_apps: ['Sources', 'Examples', 'DemoApp', xcode_project],
    integration: ['Sources', 'Integration', xcode_project],
    ruby: ['fastlane', 'Gemfile', 'Gemfile.lock'],
    xcmetrics: ['Sources']
  }
end

